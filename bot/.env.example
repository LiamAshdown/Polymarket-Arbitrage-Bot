# Engine Mode: "paper" or "live"
ENGINE_MODE=paper

# Live Trading Configuration (required when ENGINE_MODE=live)
PRIVATE_KEY=0xyour_private_key_here

# Bot Configuration
BUFFER_TICKS=0
MIN_EDGE=0.01
ORDER_TIMEOUT_SECONDS=30
MAX_PAIRS=1
MIN_QUANTITY=5.0
MAX_QUANTITY=5.0
MAX_SPREAD_BPS=12500.0
SCALE_WITH_SPREAD=true

# RSI Signal: filters orders during overbought/oversold conditions
RSI_ENABLED=true
RSI_PERIOD=14
RSI_OVERBOUGHT=70.0
RSI_OVERSOLD=30.0

# Volume Weight Signal: requires minimum market activity
VOLUME_ENABLED=true
VOLUME_PERIOD=50
VOLUME_THRESHOLD=1.5
